<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="limo_ackerman">

    <xacro:include filename="$(find limo_description)/urdf/gazebo.xacro" />
    <xacro:include filename="$(find limo_description)/urdf/limo_imu.xacro" />

    <!-- Vehicle Geometries -->
    <xacro:property name="base_x_size" value="0.2" />
    <xacro:property name="base_y_size" value="0.13" />
    <xacro:property name="base_z_size" value="0.1" />

    <xacro:property name="wheelbase" value="0.2"/>
    <xacro:property name="track" value="0.14"/>
    <xacro:property name="base_mass" value="3.0"/>
    <xacro:property name="wheel_vertical_offset" value="0.0" />
    <xacro:property name="wheel_length" value="0.045" />
    <xacro:property name="wheel_radius" value="0.045" />

    <!-- BASE FOOTPRINT LINK -->

    <link name="base_footprint">

    </link>

    <!-- BASE LINK -->

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.045"/>
    </joint>

    <link name="base_link">
        <xacro:inertial_box mass="3" x="0.2" y="0.13" z="0.1">
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
        </xacro:inertial_box>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Body.STL"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Body.STL"/>
            </geometry>
        </collision>
    </link>

    <!-- WHEEL LINK -->

    <link name="rear_right_wheel_link">
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Wheel.STL" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Wheel.STL" />
            </geometry>
        </collision>
    </link>

    <link name="rear_left_wheel_link">
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Wheel.STL" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Wheel.STL" />
            </geometry>
        </collision>
    </link>

    <link name="front_right_wheel_link">
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Wheel.STL" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Wheel.STL" />
            </geometry>
        </collision>
    </link>

    <link name="front_left_wheel_link">
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Wheel.STL" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file:///$(find limo_description)/meshes/Wheel.STL" />
            </geometry>
        </collision>
    </link>

    <link name="right_steering_hinge">
        <xacro:inertial_flip_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_flip_cylinder>
    </link>
    <link name="left_steering_hinge">
        <xacro:inertial_flip_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_flip_cylinder>
    </link>

    <!-- WHEEL JOINT -->

    <joint name="rear_left_wheel" type="continuous">
        <origin xyz="-0.1 0.07 0" rpy="-1.57079632679 0 0" />
        <parent link="base_link" />
        <child link="rear_left_wheel_link" />
        <axis xyz="0 0 1" />
        <limit 
            effort="10.0" 
            lower="-3.14159265359" 
            upper="3.14159265359" 
            velocity="20.0"
            />
    </joint>

    <joint name="rear_right_wheel" type="continuous">
        <origin xyz="-0.1 -0.07 0" rpy="-1.57079632679 0 0" />
        <parent link="base_link" />
        <child link="rear_right_wheel_link" />
        <axis xyz="0 0 1" />
        <limit 
            effort="10.0" 
            lower="-3.14159265359" 
            upper="3.14159265359" 
            velocity="20.0"
            />
    </joint>

    <joint name="left_steering_hinge_wheel" type="revolute">
        <origin xyz="0.1 0.07 0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="left_steering_hinge" />
        <axis xyz="0 0 1" />
        <limit 
            effort="10.00" 
            lower="-0.60" 
            upper="0.60" 
            velocity="10.00"/>
    </joint>

    <joint name="right_steering_hinge_wheel" type="revolute">
        <origin xyz="0.1 -0.07 0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="right_steering_hinge" />
        <axis xyz="0 0 1" />
        <limit 
            effort="10.00" 
            lower="-0.60" 
            upper="0.60" 
            velocity="10.00"/>
    </joint>

    <joint name="front_left_wheel" type="continuous">
        <origin xyz="0 0 0" rpy="-1.57079632679 0 0" />
        <parent link="left_steering_hinge" />
        <child link="front_left_wheel_link" />
        <axis xyz="0 0 1" />
        <limit 
            effort="10.0" 
            lower="-3.14159265359" 
            upper="3.14159265359" 
            velocity="20.0"
            />
    </joint>

    <joint name="front_right_wheel" type="continuous">
        <origin xyz="0 0 0" rpy="-1.57079632679 0 0" />
        <parent link="right_steering_hinge" />
        <child link="front_right_wheel_link" />
        <axis xyz="0 0 1" />
        <limit 
            effort="10.0" 
            lower="-3.14159265359" 
            upper="3.14159265359" 
            velocity="20.0"
            />
    </joint>

</robot>